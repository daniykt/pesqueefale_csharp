@{
    ViewData["Title"] = "Página Inicial";
    Layout = null;

    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Pesque & Fale</title>
    <link rel="stylesheet" href="~/css/home.css" />
    <link rel="stylesheet" href="~/css/global.css" />
    <link rel="stylesheet" href="~/css/sidebar.css" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined"
          rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
          rel="stylesheet" />
</head>

<body>
    <!-- Navegação Lateral -->
    <nav class="sidebar">
        <div class="sidebar-header">
            <img src="~/assets/logo/logo.jpg"
                 alt="Pesque & Fale"
                 class="logo"
                 width="100" />
            <h2 class="site-title"></h2>
        </div>

        <div class="nav-menu">
            <a asp-controller="Home" asp-action="Home" class="nav-item @(currentAction == "Home" ? "active" : "")">
                <span class="material-symbols-outlined">home</span>
                <span class="nav-text">Página Inicial</span>
            </a>
            <a asp-controller="Home" asp-action="Pesquisar" class="nav-item @(currentAction == "Pesquisar" ? "active" : "")">
                <span class="material-symbols-outlined">search</span>
                <span class="nav-text">Pesquisa</span>
            </a>
            <a asp-controller="Home" asp-action="MelhoresLocais" class="nav-item @(currentAction == "MelhoresLocais" ? "active" : "")">
                <span class="material-symbols-outlined">location_on</span>
                <span class="nav-text">Melhores Locais</span>
            </a>
            <a asp-controller="Home" asp-action="Notificacao" class="nav-item @(currentAction == "Notificacao" ? "active" : "")">
                <span class="material-symbols-outlined">
                    notifications
                    <span class="badge" id="contador">3</span>
                </span>
                <span class="nav-text">Notificações</span>
            </a>
            <a asp-controller="Home" asp-action="Sobrenos" class="nav-item @(currentAction == "Sobrenos" ? "active" : "")">
                <span class="material-symbols-outlined">school</span>
                <span class="nav-text">Sobre nós</span>
            </a>
            <a asp-controller="Home" asp-action="Perfil" class="nav-item @(currentAction == "Perfil" ? "active" : "")">
                <span class="material-symbols-outlined">person</span>
                <span class="nav-text">Perfil</span>
            </a>
        </div>

        <div class="sidebar-footer">
            <div class="theme-toggle">
                <button id="theme-btn" class="theme-btn">
                    <span class="material-symbols-outlined">dark_mode</span>
                    <span class="nav-text">Modo Escuro</span>
                </button>
            </div>
        </div>
    </nav>

    <div class="column">
        <!-- Conteúdo Principal -->
        <main class="main-content">
            <!-- Header do Conteúdo -->
            <header class="content-header-home">
                <h1>Bem-vindo ao Pesque & Fale</h1>
                <p>Compartilhe suas experiências de pesca e descubra novos locais</p>
            </header>

            <!-- Botão Nova Publicação -->
            <section class="new-post-section">
                <div class="btn-new-post">
                    <img src="~/assets/eventos/400x300imagem-01.jpg"
                         alt="Foto de perfil"
                         class="profile-img" />
                    <input type="text"
                           placeholder="O que você deseja publicar sobre pesca hoje?"
                           readonly
                           onclick="window.location.href='formulario_publicacao.html'" />
                    <button class="post-btn">
                        <span class="material-symbols-outlined">add_photo_alternate</span>
                    </button>
                </div>
            </section>

            <!-- Layout Principal: Feed e Eventos -->
            <div class="content-layout">
                <!-- Feed de Publicações -->
                <section class="feed">
                    <div class="post-card" onclick="redirectToPostDetails(1)">
                        <div class="post-header">
                            <img src="~/assets/eventos/400x300imagem-01.jpg"
                                 alt="Henrique"
                                 class="post-author-img" />
                            <div class="post-author-info">
                                <h3 class="post-author">Henrique</h3>
                                <p class="post-meta">Matão - SP • Lago Azul • 06/05/2025</p>
                            </div>
                            <button class="post-menu">
                                <span class="material-symbols-outlined">more_vert</span>
                            </button>
                        </div>

                        <div class="post-content">
                            <p class="post-text">
                                Meu amigo pescou hoje! Que experiência incrível no Lago Azul.
                                O tucunaré estava atacando muito bem hoje de manhã. 🎣
                            </p>
                        </div>

                        <div class="post-image">
                            <img src="~/assets/eventos/400x300imagem-01.jpg"
                                 alt="Pesca no Lago Azul" />
                        </div>

                        <div class="post-stats">
                            <span>24 curtidas</span>
                            <span>8 comentários</span>
                        </div>

                        <div class="post-actions">
                            <button class="action-btn">
                                <span class="material-symbols-outlined">thumb_up</span>
                                Curtir
                            </button>
                            <button class="action-btn">
                                <span class="material-symbols-outlined">comment</span>
                                Comentar
                            </button>
                            <button class="action-btn">
                                <span class="material-symbols-outlined">share</span>
                                Compartilhar
                            </button>
                        </div>

                        <div class="post-comments">
                            <div class="comment">
                                <img src="~/assets/eventos/400x300imagem-01.jpg"
                                     alt="Lucas"
                                     class="comment-avatar" />
                                <div class="comment-content">
                                    <strong>Lucas</strong>
                                    <p>Não me chamou? Da próxima vez me avisa!</p>
                                </div>
                            </div>
                            <div class="comment">
                                <img src="~/assets/eventos/400x300imagem-01.jpg"
                                     alt="Danilo"
                                     class="comment-avatar" />
                                <div class="comment-content">
                                    <strong>Danilo</strong>
                                    <p>Foi legal a experiência! Quero ir na próxima também.</p>
                                </div>
                            </div>

                            <div class="comment-input">
                                <img src="~/assets/eventos/recanto_pescador.jpg"
                                     alt="Você"
                                     class="comment-avatar" />
                                <input type="text" placeholder="Escreva um comentário..." />
                                <button class="comment-btn">
                                    <span class="material-symbols-outlined">send</span>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Publicação 2 -->
                    <div class="post-card" onclick="redirectToPostDetails(2)">
                        <div class="post-header">
                            <img src="~/assets/eventos/400x300imagem-01.jpg"
                                 alt="Lucas"
                                 class="post-author-img" />
                            <div class="post-author-info">
                                <h3 class="post-author">Lucas</h3>
                                <p class="post-meta">
                                    Matão - SP • Recanto do Pescador • 06/05/2025
                                </p>
                            </div>
                            <button class="post-menu">
                                <span class="material-symbols-outlined">more_vert</span>
                            </button>
                        </div>

                        <div class="post-content">
                            <p class="post-text">
                                Olha o peixe que o pai pegou! Dourado de 3kg no Recanto do
                                Pescador. A isca artificial funcionou perfeitamente! 🐟
                            </p>
                        </div>

                        <div class="post-image">
                            <img src="~/assets/eventos/400x300imagem-01.jpg"
                                 alt="Dourado pescado" />
                        </div>

                        <div class="post-stats">
                            <span>18 curtidas</span>
                            <span>5 comentários</span>
                        </div>

                        <div class="post-actions">
                            <button class="action-btn">
                                <span class="material-symbols-outlined">thumb_up</span>
                                Curtir
                            </button>
                            <button class="action-btn">
                                <span class="material-symbols-outlined">comment</span>
                                Comentar
                            </button>
                            <button class="action-btn">
                                <span class="material-symbols-outlined">share</span>
                                Compartilhar
                            </button>
                        </div>

                        <div class="post-comments">
                            <div class="comment">
                                <img src="https://s2.glbimg.com/YgAhqyyC53AAnulnR74rTCBRago=/s.glbimg.com/jo/g1/f/original/2016/03/29/lula_em_noronha_pescaria_4.jpg"
                                     alt="Henrique"
                                     class="comment-avatar" />
                                <div class="comment-content">
                                    <strong>Henrique</strong>
                                    <p>Que peixe amigo! Parabéns pela pescaria!</p>
                                </div>
                            </div>

                            <div class="comment-input">
                                <img src="https://s2.glbimg.com/YgAhqyyC53AAnulnR74rTCBRago=/s.glbimg.com/jo/g1/f/original/2016/03/29/lula_em_noronha_pescaria_4.jpg"
                                     alt="Você"
                                     class="comment-avatar" />
                                <input type="text" placeholder="Escreva um comentário..." />
                                <button class="comment-btn">
                                    <span class="material-symbols-outlined">send</span>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Card de Dicas -->
                    <div class="tips-card">
                        <div class="tips-header">
                            <span class="material-symbols-outlined">lightbulb</span>
                            <h3>Dica do Dia</h3>
                        </div>
                        <p>
                            Para pescar tucunaré, use iscas artificiais como jigs e
                            spinners. O melhor horário é no início da manhã ou final da
                            tarde.
                        </p>
                    </div>
                </section>

                <!-- Sidebar Direita - Eventos e Informações -->
                <aside class="right-sidebar">
                    <!-- Eventos -->
                    <div class="widget events-widget">
                        <h3 class="widget-title">
                            <span class="material-symbols-outlined">event</span>
                            Próximos Eventos
                        </h3>

                        <div class="event-item">
                            <div class="event-image">
                                <img src="~/assets/eventos/evento1.jpg" alt="Torneio de Tucunaré" />
                            </div>
                            <div class="event-info">
                                <h4 class="event-title">Torneio de Tucunaré</h4>
                                <p class="event-date">10/05/2025</p>
                                <p class="event-location">Recanto do Pescador</p>
                                <p class="event-desc">
                                    Participe do maior torneio do estado!
                                </p>
                                <button class="event-btn">Participar</button>
                            </div>
                        </div>

                        <div class="event-item">
                            <div class="event-image">
                                <img src="~/assets/eventos/evento2.jpg" alt="Pesca de Praia" />
                            </div>
                            <div class="event-info">
                                <h4 class="event-title">Pesca de Praia</h4>
                                <p class="event-date">20/05/2025</p>
                                <p class="event-location">Pesqueiro Rota do Peixe</p>
                                <p class="event-desc">Competição de pesca na orla.</p>
                                <button class="event-btn">Participar</button>
                            </div>
                        </div>

                        <div class="event-item">
                            <div class="event-image">
                                <img src="~/assets/eventos/evento3.jpg"
                                     alt="Campeonato de Caiaque" />
                            </div>
                            <div class="event-info">
                                <h4 class="event-title">Campeonato de Caiaque</h4>
                                <p class="event-date">05/06/2025</p>
                                <p class="event-location">Pesqueiro 311</p>
                                <p class="event-desc">Pesca esportiva de caiaque.</p>
                                <button class="event-btn">Participar</button>
                            </div>
                        </div>
                    </div>

                    <!-- Locais Populares -->
                    <div class="widget popular-places">
                        <h3 class="widget-title">
                            <span class="material-symbols-outlined">trending_up</span>
                            Locais em Alta
                        </h3>

                        <div class="place-item">
                            <img src="~/assets/eventos/pesqueiro_311.jpg" alt="Lago Azul" />
                            <div class="place-info">
                                <h4>Lago Azul</h4>
                                <p>Matão - SP</p>
                                <div class="place-rating">
                                    <span>⭐ 4.8</span>
                                    <span>124 avaliações</span>
                                </div>
                            </div>
                        </div>

                        <div class="place-item">
                            <img src="~/assets/eventos/recanto_pescador.jpg"
                                 alt="Recanto do Pescador" />
                            <div class="place-info">
                                <h4>Recanto do Pescador</h4>
                                <p>Matão - SP</p>
                                <div class="place-rating">
                                    <span>⭐ 4.6</span>
                                    <span>89 avaliações</span>
                                </div>
                            </div>
                        </div>

                        <div class="place-item">
                            <img src="~/assets/eventos/pesqueiro_311.jpg"
                                 alt="Pesqueiro 311" />
                            <div class="place-info">
                                <h4>Pesqueiro 311</h4>
                                <p>Araraquara - SP</p>
                                <div class="place-rating">
                                    <span>⭐ 4.7</span>
                                    <span>156 avaliações</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Clima -->
                    <div class="widget weather-widget">
                        <h3 class="widget-title">
                            <span class="material-symbols-outlined">wb_sunny</span>
                            Condições para Pesca
                        </h3>

                        <div class="weather-info">
                            <div class="weather-main">
                                <span class="weather-icon">☀️</span>
                                <div>
                                    <h4>28°C</h4>
                                    <p>Ensolarado</p>
                                </div>
                            </div>

                            <div class="weather-details">
                                <div class="weather-item">
                                    <span class="material-symbols-outlined">air</span>
                                    <span>Vento: 12 km/h</span>
                                </div>
                                <div class="weather-item">
                                    <span class="material-symbols-outlined">water_drop</span>
                                    <span>Umidade: 65%</span>
                                </div>
                                <div class="weather-item">
                                    <span class="material-symbols-outlined">visibility</span>
                                    <span>Visibilidade: Boa</span>
                                </div>
                            </div>

                            <div class="fishing-conditions">
                                <span class="condition-good">🎣 Condições Excelentes para Pesca</span>
                            </div>
                        </div>
                    </div>
                </aside>
            </div>
        </main>

        <!-- Rodapé -->
        <footer>
            <div class="footer-container">
                <div>
                    <h3>Sobre Nós</h3>
                    <p>
                        Grupo de estudantes dedicados ao desenvolvimento de iniciativas
                        voltadas à melhoria do trabalho socioeconômico em Matão-SP e
                        região.
                    </p>
                </div>
                <div>
                    <h3>Links Úteis</h3>
                    <a asp-controller="Home" asp-action="Home">Página Inicial</a>
                    <a asp-controller="Home" asp-action="Pesquisar">Pesquisa de Locais</a>
                    <a asp-controller="Home" asp-action="MelhoresLocais">Melhores locais</a>
                    <a asp-controller="Home" asp-action="Notificacao">Notificações</a>
                    <a asp-controller="Home" asp-action="SobreNos">Sobre nós</a>
                    <a asp-controller="Home" asp-action="Perfil">Perfil</a>
                </div>
                <div>
                    <h3>Contato</h3>
                    <p>Email: pesquefale@gmail.com</p>
                    <span class="material-symbols-outlined"></span>
                </div>
            </div>
            <p class="copyright">
                &copy; Pesque & Fale 2025 - Todos os direitos reservados.
            </p>
        </footer>
    </div>
    <script src="~/js/menu.js"></script>
    <script src="~/js/script.js"></script>
    <script src="~/js/notificacao.js" defer></script>
</body>
</html>
