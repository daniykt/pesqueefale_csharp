@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login/Cadastro - PESQUE & FALE</title>
    <link rel="stylesheet" href="~/css/index.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
</head>

<body class="login-page">
    <div class="wrapper">
        <!-- LADO ESQUERDO: imagem profissional -->
        <aside class="side-image" aria-hidden="true">
            <img src="~/assets/login/flat.png" alt="Imagem lateral profissional" />
        </aside>

        <!-- ÁREA DE FORMULÁRIOS -->
        <div class="auth-area">
            <div class="form-box login">
                <div class="logo">
                    <img src="~/assets/login/logo1.png" alt="Logo">
                    <img src="~/assets/login/logo2.png" alt="Logo">
                </div>
                <h2>ENTRA</h2>
                <form asp-controller="Home" asp-action="Login" method="post">
                    <div class="input-box">
                        <span class="material-symbols-outlined icon">alternate_email</span>
                        <input type="email" required placeholder=" " name="email" />
                        <label>Email</label>
                        <span class="input-hint">exemplo@gmail.com</span>
                    </div>
                    <div class="input-box">
                        <span class="material-symbols-outlined icon">password</span>
                        <input type="password" required placeholder=" " class="password-input" name="password" />
                        <label>senha</label>
                        <span class="input-hint">Entre 6 a 10 caracteres pelo menos</span>
                        <span class="material-symbols-outlined toggle-password">visibility</span>
                    </div>
                    <div class="remember-forgot">
                        <label><input type="checkbox" name="rememberMe">Lembre-se de mim</label>
                        <a href="#">Esqueceu sua senha?</a>
                    </div>
                    <button type="submit" class="btn">ENTRA</button>
                    <div class="login-register">
                        <p>Não tem conta aqui?<a href="~/Views/Home/Home.cshtml" class="register-link">Cadastre-se aqui</a></p>
                    </div>
                </form>
            </div>

            <div class="form-box register">
                <div class="logo">
                    <img src="~/assets/login/logo1.png" alt="Logo">
                    <img src="~/assets/login/logo2.png" alt="Logo">
                </div>
                <h2>CADASTRO</h2>
                <form asp-controller="Index" asp-action="Register" method="post">
                    <div class="input-box">
                        <span class="material-symbols-outlined icon">person</span>
                        <input type="text" required placeholder=" " name="username" />
                        <label>Usuário</label>
                        <span class="input-hint">Sem espaços ou caracteres especiais</span>
                    </div>
                    <div class="input-box">
                        <span class="material-symbols-outlined icon">alternate_email</span>
                        <input type="email" required placeholder=" " name="email" />
                        <label>Email</label>
                        <span class="input-hint">exemplo@gmail.com</span>
                    </div>
                    <div class="input-box">
                        <span class="material-symbols-outlined icon">password</span>
                        <input type="password" required placeholder=" " class="password-input" name="password" />
                        <label>senha</label>
                        <span class="input-hint">Entre 6 a 10 caracteres</span>
                        <span class="material-symbols-outlined toggle-password">visibility</span>
                    </div>
                    <div class="remember-forgot">
                        <label><input type="checkbox" name="acceptTerms">Eu aceito os termos &amp; condições.</label>
                    </div>
                    <button type="submit" class="btn">Cadastrar-se</button>
                    <div class="login-register">
                        <p>Já tem conta aqui?<a href="#" class="login-link">Entra</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/js/login.js"></script>
</body>

</html>