@{
    ViewData["Title"] = "Página Notificacao";
    Layout = null;

    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notificações</title>
    <link rel="stylesheet" href="~/css/global.css">
    <link rel="stylesheet" href="~/css/notificacao.css">
    <link rel="stylesheet" href="~/css/contador.css">
    <link rel="stylesheet" href="~/css/sidebar.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <!-- Navegação Lateral -->
    <nav class="sidebar">
        <div class="sidebar-header">
            <img src="~/assets/logo/logo.jpg" alt="Pesque & Fale" class="logo" width="100">

            <h2 class="site-title"></h2>
        </div>

        <div class="nav-menu">
            <a asp-controller="Home" asp-action="Home" class="nav-item @(currentAction == "Home" ? "active" : "")">
                <span class="material-symbols-outlined">home</span>
                <span class="nav-text">Página Inicial</span>
            </a>
            <a asp-controller="Home" asp-action="Pesquisar" class="nav-item @(currentAction == "Pesquisar" ? "active" : "")">
                <span class="material-symbols-outlined">search</span>
                <span class="nav-text">Pesquisa</span>
            </a>
            <a asp-controller="Home" asp-action="MelhoresLocais" class="nav-item @(currentAction == "MelhoresLocais" ? "active" : "")">
                <span class="material-symbols-outlined">location_on</span>
                <span class="nav-text">Melhores Locais</span>
            </a>
            <a asp-controller="Home" asp-action="Notificacao" class="nav-item @(currentAction == "Notificacao" ? "active" : "")">
                <span class="material-symbols-outlined">
                    notifications
                    <span class="badge" id="contador">3</span>
                </span>
                <span class="nav-text">Notificações</span>
            </a>
            <a asp-controller="Home" asp-action="Sobrenos" class="nav-item @(currentAction == "Sobrenos" ? "active" : "")">
                <span class="material-symbols-outlined">school</span>
                <span class="nav-text">Sobre nós</span>
            </a>
            <a asp-controller="Home" asp-action="Perfil" class="nav-item @(currentAction == "Perfil" ? "active" : "")">
                <span class="material-symbols-outlined">person</span>
                <span class="nav-text">Perfil</span>
            </a>
        </div>

        <div class="sidebar-footer">
            <div class="theme-toggle">
                <button id="theme-btn" class="theme-btn">
                    <span class="material-symbols-outlined">dark_mode</span>
                    <span class="nav-text">Modo Escuro</span>
                </button>
            </div>
        </div>
    </nav>

    <!-- Exemplo para uma notificação -->
    <div class="column">
        <div class="container">
            <div class="container-notificacoes">
                <div class="notificacao" data-id="1">
                    <div class="meta">
                        <span class="data">07/05/2025 10:35</span>
                        <button class="close" onclick="excluir(this)">&times;</button>
                    </div>
                    <p class="comentario"><strong>Pessoa 1:</strong> Lugarzinho da hora pra pescar, viu? Vou aproveitar mais vezes com certeza!</p>
                    <div class="botoes">
                        <button onclick="marcarComoLida(this)"><i class="fas fa-check"></i> Lida</button>
                        <button class="like-btn" onclick="toggleReaction(this, 'like')"><i class="far fa-thumbs-up"></i> Curtir</button>
                        <button class="dislike-btn" onclick="toggleReaction(this, 'dislike')"><i class="far fa-thumbs-down"></i> Não Curtir</button>
                        <button class="favorite-btn" onclick="toggleFavorite(this)"><i class="far fa-star"></i> Favorito</button>
                    </div>
                </div>

                <div class="notificacao" data-id="2">
                    <div class="meta">
                        <span class="data">07/05/2025 12:00</span>
                        <button class="close" onclick="excluir(this)">&times;</button>
                    </div>
                    <p class="comentario"><strong>Pessoa 2:</strong> Você pode me informar se aí é permitido usar molinete profissional para pescar lambari?</p>
                    <div class="botoes">
                        <button onclick="marcarComoLida(this)"><i class="fas fa-check"></i> Lida</button>
                        <button class="like-btn" onclick="toggleReaction(this, 'like')"><i class="far fa-thumbs-up"></i> Curtir</button>
                        <button class="dislike-btn" onclick="toggleReaction(this, 'dislike')"><i class="far fa-thumbs-down"></i> Não Curtir</button>
                        <button class="favorite-btn" onclick="toggleFavorite(this)"><i class="far fa-star"></i> Favorito</button>
                    </div>
                </div>

                <div class="notificacao" data-id="3">
                    <div class="meta">
                        <span class="data">07/05/2025 15:30</span>
                        <button class="close" onclick="excluir(this)">&times;</button>
                    </div>
                    <p class="comentario"><strong>Você tem novos seguidores:</strong> Pedro e João começaram a seguir você</p>
                    <div class="botoes">
                        <button onclick="marcarComoLida(this)"><i class="fas fa-check"></i> Lida</button>
                        <button class="like-btn" onclick="toggleReaction(this, 'like')"><i class="far fa-thumbs-up"></i> Curtir</button>
                        <button class="dislike-btn" onclick="toggleReaction(this, 'dislike')"><i class="far fa-thumbs-down"></i> Não Curtir</button>
                        <button class="favorite-btn" onclick="toggleFavorite(this)"><i class="far fa-star"></i> Favorito</button>
                    </div>
                </div>

                <div class="notificacao" data-id="4">
                    <div class="meta">
                        <span class="data">07/05/2025 20:30</span>
                        <button class="close" onclick="excluir(this)">&times;</button>
                    </div>
                    <p class="comentario"><strong>Testes:</strong> Maria e Lucas curtiram seu post</p>
                    <div class="botoes">
                        <button onclick="marcarComoLida(this)"><i class="fas fa-check"></i> Lida</button>
                        <button class="like-btn" onclick="toggleReaction(this, 'like')"><i class="far fa-thumbs-up"></i> Curtir</button>
                        <button class="dislike-btn" onclick="toggleReaction(this, 'dislike')"><i class="far fa-thumbs-down"></i> Não Curtir</button>
                        <button class="favorite-btn" onclick="toggleFavorite(this)"><i class="far fa-star"></i> Favorito</button>
                    </div>
                </div>
            </div>
        </div>
        <script src="../Javascript/script.js"></script>
        <script src="../Javascript/notificacao.js"></script>
        <!-- Rodapé  -->
        <footer>
            <div class="footer-container">
                <div>
                    <h3>Sobre Nós</h3>
                    <p>Grupo de estudantes dedicados ao desenvolvimento de iniciativas voltadas à melhoria do trabalho socioeconômico em Matão-SP e região.</p>
                </div>
                <div>
                    <h3>Links Úteis</h3>
                    <a asp-controller="Home" asp-action="Home">Página Inicial</a>
                    <a asp-controller="Home" asp-action="Pesquisar">Pesquisa de Locais</a>
                    <a asp-controller="Home" asp-action="MelhoresLocais">Melhores locais</a>
                    <a asp-controller="Home" asp-action="Notificacao">Notificações</a>
                    <a asp-controller="Home" asp-action="SobreNos">Sobre nós</a>
                    <a asp-controller="Home" asp-action="Perfil">Perfil</a>
                </div>
                <div>
                    <h3>Contato</h3>
                    <p>Email: pesquefale@gmail.com</p>
                </div>
            </div>
            <p class="copyright">&copy; Pesque & Fale 2025 - Todos os direitos reservados.</p>
        </footer>
    </div>
    <script src="~/js/notificacao.js"></script>
    <script src="~/js/menu.js"></script>
    <script src="~/js/script.js"></script>
</body>
</html>